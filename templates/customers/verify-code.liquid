{% layout settings.customer_layout %}

<div class="grid">

  <div class="grid-item large--one-third push--large--one-third text-center">

      <h1>{{ 'verify.code.title' | t }}</h1>
      <form name="verifyCodeForm" method="POST">
      <input type="text" name="customer[verification_code]" placeholder="{{ 'verify.code.placeholder.enter_code' | t }}" autofocus>
      <label><input type="checkbox" name="customer[remember_browser]">{{ 'verify.code.label.checkbox' | t }}</label>
      <input type="submit" value="{{ 'verify.code.submit' | t }}" class="btn">
      </form>

  </div>

</div>